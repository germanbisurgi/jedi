{
  "title": "Detailed Occurrence Query",
  "type": "object",
  "properties": {
    "occurrence": {
      "title": "Did grey herons appear in your area during the hunting year 2016/17?",
      "type": "string",
      "default": "yes",
      "enum": [
        "yes",
        "no"
      ],
      "x-options": {
        "format": "radio"
      }
    }
  },
  "if": {
    "properties": {
      "occurrence": {
        "const": "yes"
      }
    }
  },
  "then": {
    "properties": {
      "count": {
        "title": "Estimated number of individuals in 2016/17",
        "type": "integer",
        "default": 4,
        "minimum": 1
      }
    }
  },
  "else": {
    "properties": {
      "count": {
        "title": "Estimated number of individuals in 2016/17",
        "type": "integer",
        "const": 0,
        "readOnly": true,
        "x-options": {
          "enforceConst": true
        }
      },
      "something": {
        "title": "Something else",
        "type": "string"
      }
    }
  }
}
