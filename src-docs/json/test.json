{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chart.js Configuration Schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["bar", "line", "pie", "doughnut", "radar", "polarArea", "bubble", "scatter"]
    },
    "data": {
      "type": "object",
      "properties": {
        "labels": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "datasets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "data": {
                "type": "array",
                "items": { "type": "number" }
              },
              "backgroundColor": {
                "type": ["string", "array"],
                "items": { "type": "string" }
              },
              "borderColor": {
                "type": ["string", "array"],
                "items": { "type": "string" }
              },
              "borderWidth": { "type": "number" }
            },
            "required": ["label", "data"]
          }
        }
      },
      "required": ["labels", "datasets"]
    },
    "options": {
      "type": "object",
      "properties": {
        "responsive": { "type": "boolean" },
        "scales": {
          "type": "object",
          "properties": {
            "y": {
              "type": "object",
              "properties": {
                "beginAtZero": { "type": "boolean" }
              }
            }
          }
        },
        "plugins": {
          "type": "object"
        }
      }
    }
  },
  "required": ["type", "data"]
}
