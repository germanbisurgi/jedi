{
  "type": "object",
  "title": "Login",
  "required": [
    "email",
    "password",
    "keep",
    "csfr"
  ],
  "enablePropertiesToggle": false,
  "properties": {
    "email": {
      "title": "E-Mail",
      "type": "string",
      "format": "email",
      "titleIconClass": "fas fa-envelope"
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 8,
      "x-format": "password",
      "x-titleIconClass": "fas fa-lock"
    },
    "keep": {
      "title": "Remember me",
      "type": "boolean",
      "x-format": "checkbox"
    },
    "csfr": {
      "type": "string",
      "default": "csfr",
      "x-format": "hidden"
    }
  }
}
