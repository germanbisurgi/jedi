{
  "type": "object",
  "properties": {
    "shape": {
      "type": "string",
      "enum": ["circle", "square", "rectangle"],
      "default": "square"
    }
  },
  "if": {
    "properties": {
      "shape": { "const": "circle" }
    }
  },
  "then": {
    "properties": {
      "radius": { "type": "number", "minimum": 0 }
    },
    "required": ["radius"]
  },
  "else": {
    "if": {
      "properties": {
        "shape": { "const": "square" }
      }
    },
    "then": {
      "properties": {
        "sideLength": { "type": "number", "minimum": 0 }
      },
      "required": ["sideLength"]
    },
    "else": {
      "properties": {
        "length": { "type": "number", "minimum": 0 },
        "width": { "type": "number", "minimum": 0 }
      },
      "required": ["length", "width"]
    }
  }
}
