{
  "type": "object",
  "properties": {
    "shape": {
      "type": "string",
      "enum": ["circle", "square"]
    }
  },
  "if": {
    "properties": {
      "shape": { "const": "circle" }
    }
  },
  "then": {
    "properties": {
      "radius": { "type": "number", "minimum": 0 }
    },
    "required": ["radius"]
  },
  "else": {
    "properties": {
      "length": { "type": "number", "minimum": 0 },
      "width": { "type": "number", "minimum": 0 }
    },
    "required": ["length", "width"]
  }
}
